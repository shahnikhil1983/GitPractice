# Load the required assembly for mouse actions
Add-Type -TypeDefinition @"
using System;
using System.Runtime.InteropServices;
public class MouseInput {
    [DllImport("user32.dll")]
    public static extern void mouse_event(int dwFlags, int dx, int dy, int cButtons, int dwExtraInfo);

    public const int MOUSEEVENTF_LEFTDOWN = 0x02;
    public const int MOUSEEVENTF_LEFTUP = 0x04;
}
"@

# Function to perform a random mouse click
function PerformRandomClick {
    $screenBounds = [System.Windows.Forms.Screen]::PrimaryScreen.Bounds
    $randomX = Get-Random -Minimum 0 -Maximum $screenBounds.Width
    $randomY = Get-Random -Minimum 0 -Maximum $screenBounds.Height

    [MouseInput]::mouse_event([MouseInput]::MOUSEEVENTF_LEFTDOWN, $randomX, $randomY, 0, 0)
    [MouseInput]::mouse_event([MouseInput]::MOUSEEVENTF_LEFTUP, $randomX, $randomY, 0, 0)
}

# Perform a random click
PerformRandomClick
